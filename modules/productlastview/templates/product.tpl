<div class="entry" id="productlastview">
    <div class="entry-thumb">
        <a href="@shopDir@@productlastview_product_url@.html" title="@productlastview_product_name@">
            <img src="@productlastview_product_pic_small@" style="max-width: @productlastview_pic_width@px; max-height: @productlastview_pic_width@px" border="0" alt="@productlastview_product_name@">
        </a>
    </div>
    <div class="entry-content">
        <h4 class="entry-title">
            <a href="@shopDir@@productlastview_product_url@.html" title="@productlastview_product_name@">@productlastview_product_name@</a>
        </h4>
        <span class="entry-meta">@productlastview_price@ @productlastview_product_price@ @productlastview_product_currency@</span>
    </div>
</div>
